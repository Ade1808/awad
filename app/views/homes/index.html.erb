
<% if current_user.role == true%>
<%= render 'map'%>
<div class="container"><h1>Dashboard</h1></div>
<h1>Articles You Posted</h1>

<%else%>
<p id="notice"><%= notice %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Recruiting</th>
      <th>Skills</th>
      <th>Employability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
	      <tr>
	        <td><%= article.title %></td>
	        <td><%= article.description %></td>
	        <td><%= article.recruiting %></td>
	        <td><%= article.skills %></td>
	        <td><%= article.employability %></td>
	        <td><%= link_to 'Show', article %></td>
	      </tr>
    <% end %>
  </tbody>
</table>

<%end%>